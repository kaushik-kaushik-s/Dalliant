{
  "manifest_version": 3,
  "name": "Dalliant",
  "description": "A useful time management tool to improve your daily life",
  "version": "2.0",
  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "action": {
    "default_popup": "settings.html",
    "default_title": "Open"
  },
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js": ["content.js"]
    }],
  "permissions": ["tabs", "scripting", "activeTab","contextMenus","contentSettings","webRequest"]
}
